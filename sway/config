### VARIABLES
set $mod Mod4
set $term alacritty
set $menu "rofi -i -show drun -modi drun -show-icons -drun-display-format {name}"

### OUTPUTS
# Display
output DP-3 resolution 2560x1440@165Hz

# Wallpaper
output DP-3 bg /home/davo/.config/sway/bg.png fill

# Font
font pango:FiraCode Nerd Font Mono 8

### INPUTS
# Keyboard
input "type:keyboard" {
    xkb_layout gb
}

# Mouse
input "type:mouse" {
    accel_profile "flat"
}

### AUTOSTART

# Polkit Auth Agent
exec /usr/lib/polkit-kde-authentication-agent-1
exec dunst

### SETTINGS

# XDG
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=SWAY

# Bar
bar swaybar_command waybar

# Window Settings
default_border pixel 2
gaps outer 5
gaps inner 3
corner_radius 3

set $bg #282828
set $red #cc241d
set $green #92971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $grey #a89984
set $darkgrey #1d2021
set $white #fbf1c7

client.focused		    $blue		$blue		$darkgrey	$blue		$blue
client.focused_inactive	$darkgrey	$darkgrey	$yellow		$darkgrey	$darkgrey
client.unfocused	    $darkgrey	$darkgrey	$yellow		$darkgrey	$darkgrey
client.urgent		    $red		$red		$white		$red		$red

### KEYBINDINGS
# Open Applications
bindsym $mod+Return exec $term
bindsym $mod+d exec $menu

# Application Control
bindsym $mod+Shift+q kill
bindsym $mod+Shift+s exec grim -g "$(slurp)" - | wl-copy

# Sway Controls
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit Sway?' -B 'Yes' 'swaymsg exit'
bindsym $mod+f fullscreen

# Audio Controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym XF86AudioPlay exec --no-startup-id playerctl -p cider play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl -p cider play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl -p cider next
bindsym XF86AudioPrev exec --no-startup-id playerctl -p cider previous

# Window Focus
bindsym $mod+Up focus up
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right

# Window Movement
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right

# Change Workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5

# Move Windows to Workspaces
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5

# Window Split Settings
bindsym $mod+b splith
bindsym $mod+v splitv

# Floating Window Controls
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
floating_modifier $mod normal

## MODE

# Resize
mode "󰩨" {
    bindsym Up resize grow height 5ppt
    bindsym Down resize shrink height 5ppt
    bindsym Left resize grow width 5ppt
    bindsym Right resize shrink width 5ppt

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+r mode "󰩨"

# Power
mode "⏻" {
    bindsym Shift+s exec systemctl poweroff -i, mode "default"
    bindsym Shift+r exec systemctl reboot, mode "default"
    bindsym s exec systemctl suspend, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+Pause mode "⏻"
